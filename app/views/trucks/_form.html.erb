<%= form_for(truck) do |f| %>
  <% if truck.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(truck.errors.count, "error") %> prohibited this truck from being saved:</h2>

      <ul>
      <% truck.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :truck_name %>
    <%= f.text_field :truck_name %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :main_image %>
    <%= f.text_area :main_image %>
  </div>

  <div class="field">
    <%= f.label :thumb_image %>
    <%= f.text_area :thumb_image %>
  </div>



   <h2>Menu Items Used:</h2>
    <div>
      <%= f.fields_for :menus do |menu_form| %>
        <%= render 'menu_fields', f: menu_form %>
      <% end %>

      <div>
        <%= link_to_add_association 'Add Menu Item', f, :menus %>
      </div>
    </div>

    <div class="form-group">
      <%= f.submit 'Save Menu Items', class: 'btn btn-primary btn-block' %>
    </div>
<% end %>
