<div class="form-group nested-fields">
	<h4>Food Item:</h4>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: 'form-control' %>
  </div>

  <div class="form-group imageUpload">
    <%= f.label :food_image, for: "#{imageId = SecureRandom.uuid}", class: "btn btn-large btn-primary" %>
    <%= f.file_field :food_image, id: "#{imageId}", class: "hide", onclick: "reply_click(this.id)" %>
    <%#= f.hidden_field :food_image_cache %>
    <img src="" id="<%= (imageId + "1") %>" alt="Preview Image" width="200px"/>
  </div>

  <div class="form-group">
    <%= f.label :price %>
    <%= f.text_field :price, class: 'form-control' %>
  </div>

  <%= link_to_remove_association 'Remove Menu Item', f, class: 'btn btn-outline-danger' %>
</div>
