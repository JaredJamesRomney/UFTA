<%= form_for(truck) do |f| %>
  <% if truck.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(truck.errors.count, "error") %> prohibited this truck from being saved:</h2>

      <ul>
      <% truck.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :truck_name %>
        <%= f.text_field :truck_name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :main_image %>
        <%= f.text_area :main_image, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :thumb_image %>
        <%= f.text_area :thumb_image, class: 'form-control' %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: 'form-control', rows: 13%>
      </div>
    </div>
  </div>

  <hr>

  <h2>Menu:</h2>
  <div>
    <%= f.fields_for :menus do |menu_form| %>
      <%= render 'menu_fields', f: menu_form %>
    <% end %>

    <div>
      <%= link_to_add_association 'Add Menu Item', f, :menus %>
    </div>
  </div>

  <div class="form-group">
    <%= f.submit 'Save Menu Items', class: 'btn btn-primary btn-block' %>
  </div>
<% end %>
