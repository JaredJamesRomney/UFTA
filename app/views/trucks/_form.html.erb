<%= form_for(truck) do |f| %>
  <% if truck.errors.any? %>
      <% truck.errors.full_messages.each do |error| %>
        <%= alert_generater error %>
      <% end %>
  <% end %>

  <div class="row ">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :truck_name %>
        <%= f.text_field :truck_name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :main_image %>
        <%= f.file_field :main_image %>
      </div>

      <div class="form-group">
        <%= f.label :thumb_image %>
        <%= f.file_field :thumb_image %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: 'form-control', rows: 13%>
      </div>
    </div>
  </div>

  <hr>

  <h2>Menu:</h2>
  <div>
    <%= f.fields_for :menus do |menu_form| %>
      <%= render 'menu_fields', f: menu_form %>
    <% end %>

    <div>
      <%= link_to_add_association 'Add Menu Item', f, :menus %>
    </div>
  </div>

  <div class="form-group">
    <%= f.submit 'Save Truck', class: 'btn btn-primary btn-block' %>
  </div>
<% end %>
